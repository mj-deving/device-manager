<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.mj.portfolio.client.controller.DeviceFormController"
      spacing="14" style="-fx-padding: 20;">

    <Label text="Device" style="-fx-font-size: 15; -fx-font-weight: bold;"/>

    <GridPane hgap="12" vgap="10">
        <columnConstraints>
            <ColumnConstraints prefWidth="90"/>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>

        <Label text="Name *"    GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nameField" promptText="e.g. Router-1"
                   GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Type *"    GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <ComboBox fx:id="typeCombo" maxWidth="Infinity"
                  GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Status"    GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <ComboBox fx:id="statusCombo" maxWidth="Infinity"
                  GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="IP"        GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="ipField" promptText="192.168.x.x"
                   GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Location"  GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="locationField" promptText="e.g. Server Room A"
                   GridPane.rowIndex="4" GridPane.columnIndex="1"/>
    </GridPane>

    <Label fx:id="errorLabel" styleClass="error-label" visible="false" wrapText="true"/>

    <Region VBox.vgrow="ALWAYS"/>

    <HBox spacing="10">
        <Button fx:id="saveButton" text="Save" onAction="#onSave" styleClass="btn-primary"/>
        <Button text="Cancel" onAction="#onCancel"/>
    </HBox>
</VBox>
