<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.mj.portfolio.client.controller.LoginController"
      styleClass="login-root"
      spacing="20"
      style="-fx-padding: 32 36; -fx-background-color: #f5f5f5;"
      prefWidth="360" prefHeight="270">

    <Label text="Device Manager" styleClass="login-title"
           style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

    <GridPane hgap="10" vgap="12">
        <columnConstraints>
            <ColumnConstraints minWidth="90" halignment="RIGHT"/>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>

        <Label text="Server URL:" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="field-label"/>
        <TextField fx:id="urlField" GridPane.rowIndex="0" GridPane.columnIndex="1"
                   promptText="http://host:8080" text="http://213.199.32.18"/>

        <Label text="Username:" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="field-label"/>
        <TextField fx:id="usernameField" GridPane.rowIndex="1" GridPane.columnIndex="1"
                   promptText="admin"/>

        <Label text="Password:" GridPane.rowIndex="2" GridPane.columnIndex="0" styleClass="field-label"/>
        <PasswordField fx:id="passwordField" GridPane.rowIndex="2" GridPane.columnIndex="1"
                       promptText="••••••••"/>
    </GridPane>

    <Label fx:id="errorLabel" styleClass="error-label" wrapText="true"/>

    <Button fx:id="connectBtn" text="Connect" onAction="#onConnect"
            maxWidth="Infinity" styleClass="btn-primary"
            style="-fx-font-size: 13px; -fx-padding: 8 0;"/>

</VBox>
